{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/public",
  "installCommand": "pnpm install",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": "{server/**,drizzle/**,shared/**}"
    }
  },
  "routes": [
    {
      "src": "/api/test-db",
      "dest": "/api/test-db"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth"
    },
    {
      "src": "/api/trpc/(.*)",
      "dest": "/api/trpc"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/api/admin"
    },
    {
      "src": "/api/job-postings",
      "dest": "/api/job-postings"
    },
    {
      "src": "/api/upload/(.*)",
      "dest": "/api/upload/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

